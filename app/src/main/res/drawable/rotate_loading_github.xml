<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item
        android:bottom="5dp"
        android:left="5dp"
        android:right="5dp"
        android:top="5dp">
        <bitmap
            android:gravity="center"
            android:src="@mipmap/dialog_resh" />
    </item>
    <item>
        <rotate
            android:fromDegrees="0"
            android:interpolator="@android:anim/linear_interpolator"
            android:pivotX="50%"
            android:pivotY="50%"
            android:toDegrees="360">
            <bitmap
                android:antialias="true"
                android:filter="true"
                android:src="@mipmap/github_loading_outer" />
        </rotate>
    </item>

</layer-list>