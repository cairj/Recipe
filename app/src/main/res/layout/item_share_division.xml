<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backgraound_main"
    android:descendantFocusability="blocksDescendants">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white">


        <ImageView
            android:id="@+id/head_share_item"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:src="@mipmap/default_photo" />

        <TextView
            android:id="@+id/name_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/head_share_item"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@+id/head_share_item"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/time_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_share"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/head_share_item"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/delete_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/head_share_item"
            android:layout_marginRight="15dp"
            android:text="删除"
            android:textColor="#0a3778"
            android:textSize="14sp"
            android:visibility="gone" />


        <TextView
            android:id="@+id/content_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/time_share"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@+id/head_share_item"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <!-- 其他 -->

        <LinearLayout
            android:id="@+id/ll_share1"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/content_share"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/head_share_item"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image1_share"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/image2_share"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/image3_share"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share2"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/ll_share1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/head_share_item"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image4_share"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/image5_share"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/image6_share"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_share3"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:layout_below="@+id/ll_share2"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_toRightOf="@+id/head_share_item"
            android:orientation="horizontal"
            android:visibility="gone">

            <ImageView
                android:id="@+id/image7_share"
                android:layout_width="100dp"
                android:layout_height="100dp"

                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/image8_share"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitCenter" />

            <ImageView
                android:id="@+id/image9_share"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:scaleType="fitCenter" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/share4_rl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ll_share3"
            android:layout_marginTop="15dp">


            <LinearLayout
                android:id="@+id/ll_comments_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="25dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:src="@mipmap/comments_click" />

                <TextView
                    android:id="@+id/comments_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="评论"
                    android:textColor="@color/gray_home"
                    android:textSize="13sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_zan_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="13dp"
                android:layout_marginRight="18dp"
                android:layout_toLeftOf="@+id/ll_comments_share"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dianzan"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="5dp"
                    android:background="@mipmap/like" />

                <TextView
                    android:id="@+id/zan_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="赞"
                    android:textColor="@color/gray_home"
                    android:textSize="13sp" />
            </LinearLayout>

        </RelativeLayout>

        <View
            android:id="@+id/line_share"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/share4_rl"
            android:background="@color/line_bg" />
    </RelativeLayout>

</RelativeLayout>