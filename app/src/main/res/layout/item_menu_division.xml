<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:layout_marginTop="10dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/food_iv_menu"
        android:layout_width="125dp"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="10dp"
        android:scaleType="fitXY"
        android:src="@mipmap/default_photo" />

    <RelativeLayout
        android:id="@+id/title_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/food_iv_menu"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_toRightOf="@+id/food_iv_menu"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/title_tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/price_tv_menu"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/price_tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:textColor="@color/main_red"
            android:textSize="15sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/title_rl2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_rl"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/food_iv_menu"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/descripttion_tv_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_weight="1.0"
            android:ellipsize="end"
            android:maxEms="18"
            android:text="撒大苏打实打实"
            android:textColor="@color/text_gray"
            android:textSize="12sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/food_iv_menu"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="19dp"
        android:background="@mipmap/shopcar_bg"
        android:layout_toRightOf="@+id/food_iv_menu"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ivGoodsMinus"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/shopcar_minus" />

        <TextView
            android:id="@+id/tvGoodsSelectNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:text="0"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/ivGoodsAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/shopcar_add" />
    </LinearLayout>

    <!--<TextView--><!--android:id="@+id/sellnumber_tv_menu"--><!--android:layout_width="wrap_content"--><!--android:layout_height="wrap_content"--><!--android:layout_marginLeft="15dp"--><!--android:textColor="@color/main_red"--><!--android:textSize="14sp" />-->
    <LinearLayout
        android:id="@+id/delete_shop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/food_iv_menu"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/delete" />
    </LinearLayout>
</RelativeLayout>