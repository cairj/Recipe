<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/food_menu"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:layout_marginTop="12dp"
        android:scaleType="fitXY"
        android:src="@mipmap/default_photo" />

    <RelativeLayout
        android:id="@+id/foodmenu_rl"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/food_menu"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/food_menu">

        <TextView
            android:id="@+id/foodmenu_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/text_color"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/foodmenu_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="12dp"
            android:text=""
            android:textColor="@color/main_red"
            android:textSize="14sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/describe_menu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/foodmenu_rl"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="12dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/food_menu"
        android:text=""
        android:ellipsize="end"
        android:lines="3"
        android:textColor="@color/text_color"
        android:textSize="14sp" />
</RelativeLayout>